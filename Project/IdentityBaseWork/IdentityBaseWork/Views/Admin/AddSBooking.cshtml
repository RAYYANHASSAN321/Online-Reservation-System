<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#BusDropdown").change(function () {
            var busId = $(this).val();
            if (busId) {
                $.ajax({
                    url: '/Admin/GetAvailableSeats',
                    type: 'GET',
                    data: { busId: busId },
                    success: function (data) {
                        var seatDropdown = $("#SeatDropdown");
                        seatDropdown.empty(); // Clear existing options
                        seatDropdown.append('<option disabled selected>Select Seat</option>'); // Add default option

                        // Check if data is valid and populate the dropdown
                        if (data && data.length > 0) {
                            $.each(data, function (index, seat) {
                                seatDropdown.append('<option value="' + seat.busSeatID + '">' + seat.seatNumber + '</option>');
                            });
                        } else {
                            seatDropdown.append('<option disabled>No Seats Available</option>');
                        }
                    },
                    error: function () {
                        alert('Failed to fetch seats. Please try again.');
                    }
                });
            } else {
                alert('Please select a bus.');
            }
        });
    });
</script>