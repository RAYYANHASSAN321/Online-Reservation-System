@model IdentityBaseWork.Models.BusSeat

@{
    ViewData["Title"] = "AddSeat";
    Layout = "~/Views/Shared/_Layoutdb.cshtml";
}

<h1>AddSeat</h1>

<h4>BusSeat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSeat" asp-controller="admin" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SeatNumber" class="control-label"></label>
                <input asp-for="SeatNumber" class="form-control" />
                <span asp-validation-for="SeatNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="BusID" class="control-label"></label>
                 <select asp-for="BusID" class="form-control" id="BusDropdown">
                    <option disabled selected>Select Bus</option>
                    @foreach (var bus in ViewBag.Bus)
                    {
                            <option value="@bus.BusID">@bus.BusType</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="BusSeat_List">Back to List</a>
</div>

