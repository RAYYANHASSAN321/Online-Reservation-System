@model IdentityBaseWork.Models.BusSeat

@{
    ViewData["Title"] = "Seat_Edit";
    Layout = "~/Views/Shared/_Layoutdb.cshtml";

}

<h1>Seat_Edit</h1>

<h4>BusSeat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Seat_Edit" asp-controller="admin" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BusSeatID" />
            <div class="form-group">
                <label asp-for="SeatNumber" class="control-label"></label>
                <input asp-for="SeatNumber" class="form-control" />
