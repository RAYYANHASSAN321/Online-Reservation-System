@model IEnumerable<IdentityBaseWork.Models.BusSeat>

@{
    ViewData["Title"] = "BusSeatList";
    Layout = "~/Views/Shared/_Layoutdb.cshtml";
}

<h1>BusSeatList</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SeatNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SeatNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bus.BusNumber)
            </td>
            <td>
                    <form asp-action="Seat_Edit" asp-route-id="@item.BusSeatID" method="get" style="display:inline;">
                        <button type="submit" class="btn btn-warning">Edit</button>
                    </form>
                    
                    <form asp-action="BusSeat_Details" asp-route-id="@item.BusSeatID" method="get" style="display:inline;">
                        <button type="submit" class="btn btn-primary">Details</button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
