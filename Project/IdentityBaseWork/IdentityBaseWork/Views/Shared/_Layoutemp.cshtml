<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Trips - Employee Panel</title>

    <!-- BOOTSTRAP STYLES-->
    <link href="~/dbassets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/dbassets/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/dbassets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet" type="text/css" />

    <style>
        /* Ensure the main content doesn’t go behind the sidebar */
       

        /* Adjust sidebar width */
        .navbar-side {
            width: 250px;
        }

        #page-wrapper {
            margin-left: 250px; /* Adjusted to match the sidebar width */
            padding: 20px;
            min-height: 100vh;
            background-color: #f8f9fa;
            overflow-x: auto; /* Ensures large tables fit within the container */
        }

    </style>
</head>

<body>
    <div id="wrapper">
        <!-- NAVBAR TOP -->
        <nav class="navbar navbar-default navbar-cls-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/dbassets/img/logo.png" alt="Logo" width="100" height="100">
                <partial name="_LoginPartial">

            </div>
        </nav>

        <!-- NAV SIDE -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li class="text-center">
                        <img src="~/dbassets/img/find_user.png" class="user-image img-responsive" />
                    </li>
                    <li><a asp-action="Bus_List" asp-controller="employee">Buses</a></li>
                    <li><a asp-action="routes_List" asp-controller="employee">Routes</a></li>
                    <li><a asp-action="BusSeatList" asp-controller="employee">Bus Seats</a></li>
                    <li><a asp-action="BookingList" asp-controller="employee">Bookings</a></li>
                    <li><a asp-action="Age_List" asp-controller="employee">Age Discounts</a></li>
                </ul>
            </div>
        </nav>
<!-- header end -->
        <div id="page-wrapper">
            @RenderBody()
        </div>
        
        <!-- footer starts -->
    </div>




    <!-- SCRIPTS -->
    <script src="~/dbassets/js/jquery-1.10.2.js"></script>
    <script src="~/dbassets/js/bootstrap.min.js"></script>
    <script src="~/dbassets/js/jquery.metisMenu.js"></script>
    <script src="~/dbassets/js/custom.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
